<style>
  /* Features Section */

  .features-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 35px;
    padding-top: 50px;
    padding-bottom: 25px;
    background-color: #3ecaf2;
  }

  .features-container {
    width: 100%;
    max-width: 450px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 35px;
    padding: 0 15px;
  }

  .features-container h1 {
    font-size: 32px;
    color: white !important;
  }

  .features-container .feature {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .features-container .feature h3 {
    font-size: 24px;
    font-weight: 600;
    color: white !important;
  }

  .features-container .feature p {
    font-size: 16px;
    color: white !important;
  }

  .features-section img {
    width: 100%;
    height: auto;
  }

  @media screen and (min-width: 700px) {
    .features-section {
      flex-direction: row;
      justify-content: space-between;
      gap: 15px;
    }

    .features-section img {
      width: 300px;
      height: 300px;
    }

    .features-container {
      padding-left: 25px;
      max-width: 100%;
    }

    .features-container h1 {
      margin-bottom: 20px;
    }

    .features-container .feature {
      max-width: 790px;
    }
  }

  @media screen and (min-width: 1000px) {
    .features-section img {
      width: 600px;
      height: 600px;
    }

    .features-container .feature h3 {
      font-size: 26px;
    }

    .features-container .feature p {
      font-size: 20px;
    }
  }
</style>

<div class="features-section">
  <div class="features-container">
    <h1>Innovative design & features:</h1>
    {% for block in section.blocks %}
      <div class="feature">
        <h3>{{ block.settings.heading }}</h3>
        <p>{{ block.settings.paragraph }}</p>
      </div>
    {% endfor %}
  </div>
  <img
    src="{{ section.settings.image | image_url: width: 1000 }}"
    width="1"
    height="1"
  >
</div>

{% schema %}
{
  "name": "C Features",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Innovative design & features:"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "1. 360° Rotatable Nozzle"
        },
        {
          "type": "text",
          "id": "paragraph",
          "label": "Paragraph",
          "default": "The 360° tip rotation allows you to reach every point of your mouth and gum for a comprehensive cleaning"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "C Features"
    }
  ]
}
{% endschema %}
