<script
  type="application/json"
  data-section-type="product-template"
  data-section-id="{{ section.id }}"
></script>

{% if section.settings.product_breadcrumb == false %}
  {% style %}
    .breadcrumb__wrapper {
      display: none;
    }
  {% endstyle %}
{% endif %}

{% comment %}
  The contents of the product.liquid template can be found in /sections/product-template.liquid
{% endcomment %}

<section>
  <div class="container">
    {% render 'product__structured-data' %}

    <div class="breadcrumb__wrapper one-whole column">
      <div class="breadcrumb-collection breadcrumb-collection--product">
        {% if collection.previous_product or collection.next_product %}
          <div class="nav_arrows breadcrumb_text">
            {% if collection.previous_product %}
              <a
                href="{{ collection.previous_product }}"
                title="{{ 'products.general.previous_product_html' | t }}"
                class="breadcrumb_link"
                ><span class="icon-left-arrow"> {{ 'products.general.previous_product_html' | t }}</span></a
              >
            {% endif %}
            {% if collection.previous_product and collection.next_product -%}
              <span class="breadcrumb-divider"> | </span>
            {%- endif %}

            {% if collection.next_product %}
              <a
                href="{{collection.next_product}}"
                title="{{ 'products.general.next_product_html' | t }}"
                class="breadcrumb_link"
              >
                {{- 'products.general.next_product_html' | t }}
                <span class="icon-right-arrow"></span
              ></a>
            {% endif %}
          </div>
        {% endif %}

        {% render 'product__breadcrumb' %}
      </div>
    </div>

    <section
      class="
        is-flex
        is-flex-wrap
      "
    >
      {% render 'productV2',
        context: 'product',
        product: product,
        variant: product.selected_or_first_available_variant,
        gallery_thumbnails: section.settings.product_thumbs,
        gallery_click_to_zoom: section.settings.enable_product_lightbox,
        gallery_hover_zoom: section.settings.activate_zoom,
        gallery_arrows: section.settings.gallery_arrows,
        gallery_thumbnail_position: section.settings.thumbnail_position,
        gallery_thumbnail_slider: section.settings.enable_thumbnail_slider,
        gallery_slideshow_speed: section.settings.slideshow_speed,
        gallery_slideshow_transition: section.settings.slideshow_animation,
        media_position: section.settings.media_position,
        set_product_height: section.settings.set_product_height,
        product_height: section.settings.product_height,
        video_looping: section.settings.video_looping,
        show_dynamic_checkout_button: settings.show_dynamic_checkout_button,
        enable_shopify_review_comments: settings.enable_shopify_review_comments
      %}
    </section>
  </div>
</section>
<style>
   .custom--info-disc span.sale.savings{
      color: #29af5c;
    }
    .custom--info-disc .text-info {
      background-color: #69c7ed;
      padding: 5px 10px;
      text-transform: UPPERCASE;
      font-size: 11px;
      border-radius: 20px;
      color: #fff;
  }

  .custom--info-disc {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .custom--info-disc span{
    font-size: 14px;
    line-height: 1.2;
  }

  .saving-sec .saving-amount .money{
    margin-left: 5px;
    text-decoration: line-through;
  }

  .saving-sec .savings-details {
    font-weight: bold;
  }


  .price_box {
      font-size: 16px;
  }

  #shopify-section-{{ section.id }} .swatch_options{
    margin-bottom: 8px;
  }

  #shopify-section-{{ section.id }} .product_name{
    font-size: {{ section.settings.dpt }}px;
    line-height: 1.25;
    margin: 0;
  }

  #shopify-section-{{ section.id }}  .product-block--price{
    display: none;
  }

  #shopify-section-{{ section.id }} .large--text{
      margin-top: 8px;
      margin-bottom: 10px;
  }

  #shopify-section-{{ section.id }} .large--text p{
    font-size: 20px;
    line-height: 1.25;
    font-weight: 500;
    letter-spacing: 0em;
  }

  #shopify-section-{{ section.id }} .product-liquid ul {
    list-style: none;
    padding: 0;
    margin: 16px 0 10px 0;
  }

  #shopify-section-{{ section.id }} .product-liquid ul .feature-wrap {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    width: 100%;
    margin-bottom: 0px;
    -webkit-box-align: start;
    -webkit-align-items: flex-start;
    -ms-flex-align: start;
    align-items: flex-start;
    line-height: 1.45;
  }

  #shopify-section-{{ section.id }} .product-liquid ul .icon-list-item {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    margin-bottom: 0.45rem;
    -webkit-box-align: start;
    -webkit-align-items: flex-start;
    -ms-flex-align: start;
    align-items: flex-start;
  }

  #shopify-section-{{ section.id }} .product-liquid ul .feature-text {
    font-size: 12px;
    line-height: 1.35;
    font-weight: 700;
  }

  #shopify-section-{{ section.id }} .product-liquid ul .checkmark {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    width: 22px;
    height: 22px;
    margin-top: -3px;
    margin-right: 5px;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    align-items: center;
    color: #29af5c;
  }
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'logo-items'%}
    #shopify-section-{{ section.id }} img.Svg-image-links {
      width: 100%;
      height: {{block.settings.msvg_height }}px;
      object-fit: {{block.settings.svg_fit }};
    }
    {% endcase %}
  {% endfor %}

  #shopify-section-{{ section.id }} .section-header-item{
    display: flex;
    align-items: center;
    max-width: 480px;
        margin: 20px auto 0px;
  }

  #shopify-section-{{ section.id }} .section-header-item h2{
    font-size: 10px;
    line-height: 1.4;
    margin-right: 12px;
    margin-left: 12px;
    width: auto;
    white-space: nowrap;
  }

  #shopify-section-{{ section.id }} .section-header-item .line {
    width: 20%;
    height: 1px;
    background-color: rgba(15, 21, 41, 0.1);
    margin: 0 auto;
  }
  #shopify-section-{{ section.id }} .logo-bar__item{
    width: fit-content;
    max-width: 100%;
    margin-left: 7px;
    margin-right: 7px;
  }

  @media (min-width: 769px){
    #shopify-section-{{ section.id }}{
        padding-top: 35px;
    }
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'logo-items'%}
        #shopify-section-{{ section.id }} img.Svg-image-links {
          height: {{block.settings.dsvg_height }}px;
        }
      {% endcase %}
      {% endfor %}

    #shopify-section-{{ section.id }} .section-header-item .line {
    width: 100%;
    }

  }

  @media (max-width: 480px){
    #shopify-section-{{ section.id }} .product_name{
      font-size: {{ section.settings.mpt }}px;
    }

  }
</style>

